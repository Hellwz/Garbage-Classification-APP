<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/bk_new"
    >
<EditText
    android:layout_marginTop="200dp"
    android:id="@+id/name"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:hint="用户名"
    android:digits="android:digits=&quot;0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ&quot;"
    android:maxLines="1"
    android:textSize="16sp"
    android:padding="10dp"
    android:maxLength="10"
    android:drawableLeft="@drawable/name"
    android:drawablePadding="5dp"
    android:background="@drawable/button_frame"/>

<EditText
    android:id="@+id/code"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:digits="android:digits=&quot;0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ&quot;"
    android:hint="密码"
    android:inputType="textPassword"
    android:layout_below="@id/name"
    android:layout_marginTop="15dp"
    android:padding="10dp"
    android:maxLength="16"
    android:drawableLeft="@drawable/password"
    android:background="@drawable/button_frame"
    android:drawablePadding="5dp"/>

    <Button
        android:id="@+id/log_on"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"
        android:layout_below="@id/code"
        android:layout_marginTop="30dp"
        android:text="登 录"
        android:textSize="16sp"
        android:background="@drawable/button_click"
        android:textColor="#FFFFFF"


        />

    <Button
    android:id="@+id/register"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_below="@id/log_on"
    android:layout_marginTop="30dp"
    android:text="注册"
    android:textSize="16sp"
    android:layout_marginLeft="30dp"
        android:background="@drawable/button_click"
        android:textColor="#FFFFFF"
    />

    <Button
        android:id="@+id/visitor"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/log_on"
        android:layout_toRightOf="@id/register"
        android:layout_marginTop="30dp"
        android:text="游客模式"
        android:textSize="16sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_click"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>
