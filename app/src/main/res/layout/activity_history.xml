<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:src="@drawable/help"
            android:layout_below="@id/tx_1"
            android:background="#D8E6C7"/>

        <Button
            android:id="@+id/history_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="-40dp"
            android:layout_marginBottom="-45dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/text_back1"
            android:layout_below="@id/gif"
            android:background="#EEEEEE"
            android:text="历史记录"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/history_textView1"
            android:layout_width="280dp"
            android:layout_height="95dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="186dp"
            android:layout_below="@id/text_back1"
            android:background="@drawable/button_frame"
            android:paddingStart="4dp"
            />




        <TextView
            android:id="@+id/history_textView2"
            android:layout_width="280dp"
            android:layout_height="95dp"
            android:layout_below="@+id/history_textView1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_frame"
            android:paddingLeft="4dp"/>


        <TextView
            android:id="@+id/history_textView3"
            android:layout_width="280dp"
            android:layout_height="95dp"
            android:layout_below="@+id/history_textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_frame"
            android:paddingLeft="4dp"/>

        <TextView
            android:id="@+id/history_textView4"
            android:layout_width="280dp"
            android:layout_height="95dp"
            android:layout_below="@+id/history_textView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_frame"
            android:paddingLeft="4dp"/>

        <TextView
            android:id="@+id/history_textView5"
            android:layout_width="280dp"
            android:layout_height="95dp"
            android:layout_below="@+id/history_textView4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_frame"
            android:layout_marginBottom="10dp"
            android:paddingLeft="4dp"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/history_textView1"
            android:layout_alignEnd="@+id/history_textView1"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/history_textView2"
            android:layout_alignEnd="@+id/history_textView2"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/history_textView3"
            android:layout_alignEnd="@+id/history_textView3"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/history_textView4"
            android:layout_alignEnd="@+id/history_textView4"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/history_textView5"
            android:layout_alignEnd="@+id/history_textView5"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            tools:srcCompat="@tools:sample/avatars" />
    </RelativeLayout>


</ScrollView>