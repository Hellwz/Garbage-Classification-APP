<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bk">

    <SurfaceView
        android:id="@+id/sfv_preview"
        android:layout_width="wrap_content"
        android:layout_height="409dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="84dp" />

    <Button
        android:id="@+id/s_ph_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="-40dp"
        android:layout_marginBottom="-45dp"
        android:layout_toStartOf="@+id/imageView"
        android:background="@drawable/back"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/getcamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="拍照"
        android:background="@drawable/button_click_new"
        android:textColor="#FFFFFF"/>

    <ImageButton
        android:id="@+id/FlashButton"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="5dp"
        android:background="#616427"
        android:src="@drawable/light" />

    <ImageButton
        android:id="@+id/photoButton"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_alignStart="@+id/FlashButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="10dp"
        android:background="#D9E7E1"
        android:src="@drawable/album" />

    <ImageButton
        android:id="@+id/historyButton"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_below="@id/photoButton"
        android:layout_alignStart="@+id/FlashButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="8dp"
        android:background="#D9E7E1"
        android:src="@drawable/historybtn" />





</RelativeLayout>
